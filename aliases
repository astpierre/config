# Navigation shortcuts
alias l="ls -l"
alias c="clear"
alias ..="cd .."

# Misc (forget why these are here)
PROMPT_EOL_MARK=''
export PYTHONDONTWRITEBYTECODE=1

# Generate a strong password
alias strongpass="date +%s | sha256sum | base64 | head -c 24"

# Show the IP address currently connected to
alias myip="curl ipecho.net/plain; echo"

# (Dis)connect to/fro Sony Headphones using MAC address
alias sonyup="blueutil --connect cc-98-8b-d1-99-25"
alias sonydown="blueutil --disconnect cc-98-8b-d1-99-25"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# Mute mac
alias stfu="osascript -e 'set volume output muted true'"

